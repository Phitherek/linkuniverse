- content_for :title do
  Reset password
%h2 Reset password
= form_tag do_start_password_reset_users_path, class: 'form-horizontal' do
  .form-group
    .col-sm-4
      = label_tag :username, 'Your username:'
      = text_field_tag :username, '', class: 'form-control'
  .form-group
    .col-sm-4
      = submit_tag 'Send password reset instructions', class: 'btn btn-primary'
.login-link
  = link_to 'Login', login_users_path