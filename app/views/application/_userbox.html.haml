.userbox
  - if u.nil?
    .status You are not logged in!
    .links
      = link_to "Login", login_users_path
      or
      = link_to "Register", register_users_path
  - else
    .status
      Welcome
      = u.username + "!"
    .links
      .link
        = link_to "Your profile", me_users_path
      .link
        = link_to "Logout", logout_users_path, method: :delete
